@model ProjectTask
@{
    <div class="main-display">
        <h3>Task - @Model.Title</h3>
        <label>@Model.ProjectName - assigned by @Model.UserName</label><br />
        <p>@Model.Body</p>

        <label>Replies:</label><br />

        <ul class="replies">
                @if (Model.replies.Length == 0)
                {
                    <li style="text-align:center">No replies found</li>
                }
                else
                {
                    foreach(Reply r in Model.replies) {
                        <li>
                        <h4>@r.postedBy replied on @r.timePosted.ToString()</h4>
                        <p>@r.body</p>
                        </li>
                        
                    }
                }
        </ul>

        <form id="ReplyForm" method="post" asp-page-handler="TaskReply">
            <label>Reply:</label><br />
            <textarea name="ReplyBody" rows="5" cols="50"></textarea><br />
            <input name="ReplyTo" type="hidden" value="@Model.Id"/>
            <input type="submit" /><br />
            <button name="TaskComplete" type="button" >Mark as completed</button>
        </form>

    </div>


}
